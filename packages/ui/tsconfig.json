{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["cypress", "cypress-plugin-snapshots"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "docs/**/*.ts",
    "docs/**/*.vue",
    "docs/**/*.js",
    "cypress/**/*.ts",
    "cypress/**/*.js"
  ]
}
